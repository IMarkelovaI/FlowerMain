<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:layout_margin="8dp"
    android:background="@drawable/tertitory"
    app:cardBackgroundColor="?android:attr/colorBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pngRl"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/stroke1"
        android:clickable="false">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/pngView"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"
            android:clickable="false"
            android:scaleType="centerCrop"
            android:src="@drawable/book_nav"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/rounded"
            app:srcCompat="@drawable/secondary_container" />

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:fontFamily="@font/productsans"
            android:text="Фикус"
            android:textAlignment="center"
            android:textColor="?attr/colorOnSecondaryContainer"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pngView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>